{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "declaration": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "lib/**/*"]
}
