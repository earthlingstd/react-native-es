{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "declaration": true,
    "skipLibCheck": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "typeRoots": ["./typings", "node_modules/@types"]
  },
  "include": ["./src", "./typings"],
  "exclude": ["node_modules", "**/__tests__/*", "lib/**/*"]
}
